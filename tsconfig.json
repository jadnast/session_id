{
  "ts-node": {
      "moduleTypes": {
          "jest.config.ts": "cjs"
      }
  },
  "compilerOptions": {
      "lib": ["ES2021"],
      "module": "ESNext",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "target": "ESNext",
      "outDir": "dist",
      "resolveJsonModule": true,
      "declaration": true
  },
  "compileOnSave": true,
  "include": ["src/"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
